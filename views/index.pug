extends layout

block content
  h1 Quản lý số trà và trân châu đã nấu

  .menu-container
    a.menu-btn(href="/GV") Gò Vấp
    a.menu-btn(href="/XVNT") Xô Viết Nghệ Tĩnh
    a.menu-btn(href="/LPM") Lý Phục Man
    a.menu-btn(href="/BVD") Bến Vân Đồn
    a.menu-btn(href="/TANKIENG") Tân Kiểng

  style.
    .menu-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 15px;
      margin-top: 50px;
    }

    .menu-btn {
      display: inline-block;
      padding: 15px 30px;
      min-width: 200px;            /* ✅ đảm bảo nút đủ rộng */
      text-align: center;          /* ✅ căn giữa chữ */
      font-size: 18px;
      text-decoration: none;
      color: white;
      background-color: #007bff;
      border-radius: 8px;
      transition: background-color 0.3s;
    }

    .menu-btn:hover {
      background-color: #0056b3;
    }

